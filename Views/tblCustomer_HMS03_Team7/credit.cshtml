@model SandMax1.Models.tblCustomer_HMS03_Team7

@{
    ViewBag.Title = "credit";

    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
<script src="~/Content/compare.js"></script>
<h2>Sign-Up<span class="glyphicon glyphicon-log-in"></span></h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Enter Credentials</h4>
        <hr />


        <div ng-app="compapp" ng-controller="comparer">
            <div class="form-group">
                @Html.Label("", "Password", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Password("password", "", new { htmlAttributes = new { @class = "form-control" }, ng_model = "pwd", required = "required" })
                    @Html.ValidationMessageFor(model => model.BonusMilePoints, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("", "Confirm Password", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Password("cpassword", "", new { htmlAttributes = new { @class = "form-control" }, ng_model = "cpwd", required = "required" })
                    @Html.ValidationMessageFor(model => model.BonusMilePoints, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("", "User Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("username", "", new { htmlAttributes = new { @class = "form-control" },ng_model="txt" ,ng_change = "comp(pwd,cpwd)", required = "required" })
                    @Html.ValidationMessageFor(model => model.BonusMilePoints, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" /><a href="@Url.Action("Create","tblLogin_HMS03_Team7")" class="btn btn-default">Go Back</a>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
