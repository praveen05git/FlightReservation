@model IEnumerable<SandMax1.Models.tblPassenger_HMS03_Team7>

@{
    ViewBag.Title = "Index";
}

<h2>Passenger Details</h2>
<link rel="stylesheet" href="~/Content/style.css" />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JourneyID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PassengerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{

    int jouID = int.Parse(Session["JourneyID"].ToString());
    if (jouID == item.JourneyID)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JourneyID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PassengerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.PassengerID }) 
        </td>
    </tr>
    }

}
</table>


