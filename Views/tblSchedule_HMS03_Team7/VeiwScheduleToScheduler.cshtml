@model IEnumerable<SandMax1.Models.tblSchedule_HMS03_Team7>

@{
    ViewBag.Title = "VeiwScheduleToScheduler";
    Layout = "~/Views/Shared/_SchedulerLayout.cshtml";
}

<h1 style="font-family:Arial;font-size:xx-large;text-align:center">Schedules</h1>
<link rel="stylesheet" href="~/Content/StyleSheet3.css" />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.ScheduleID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlaneRegistrationID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Source)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destination)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departure)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Arrival)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusofFlight)
        </th>
        <th></th>

    </tr>
   
    @foreach (var item in Model)
    {
        //if (item.tblAeroplane_HMS03_Team7.Airline.Equals("Indigo"))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ScheduleID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlaneRegistrationID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Source)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departure)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Arrival)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusofFlight)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.ScheduleID })

                    @if ((item.StatusofFlight.Equals("Scheduled")) || (item.StatusofFlight.Equals("scheduled")))
                    {
                        @Html.Label(" | ")
                        @Html.ActionLink("Edit", "Edit", new { id = item.ScheduleID })
                        @Html.Label(" | ")
                        @Html.ActionLink("Cancel", "Delete", new { id = item.ScheduleID })
                    }
                </td>
            </tr>
        }
    }


</table>
